<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/choose_first_location"
    android:layout_height="350dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_margin="5dp"
            android:background="@drawable/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/start"
                android:text="選擇起點"
                android:layout_margin="10dp"
                android:background="@drawable/line"
                android:backgroundTint="#f0ffd0"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/line"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="date"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:backgroundTint="#f0ffd0"
                android:id="@+id/date"
                 />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="time"
                android:id="@+id/time"
                android:layout_margin="5dp"
                android:background="@drawable/line"
                android:backgroundTint="#f0ffd0"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/duration"
                android:layout_weight="1"
                android:background="@drawable/line"
                android:backgroundTint="#f0ffd0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/line"
            >
            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="選擇終點"
                android:background="@drawable/line"
                android:backgroundTint="#f0ffd0"
                android:id="@+id/end" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/line"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="交通方式"
                android:gravity="center"

                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="開車"
                    android:layout_margin="5dp"
                    android:background="@drawable/line"
                    android:backgroundTint="#f0ffd0"

                    android:id="@+id/car" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="大眾運輸"
                    android:layout_margin="5dp"
                    android:background="@drawable/line"
                    android:backgroundTint="#f0ffd0"
                    android:id="@+id/traffic" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="走路"
                    android:layout_margin="5dp"
                    android:background="@drawable/line"
                    android:backgroundTint="#f0ffd0"
                    android:id="@+id/walk" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>